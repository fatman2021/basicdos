root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[*.js]
trim_trailing_whitespace = true

[*.html]
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = false

[*.{css,scss,yml,json}]
indent_size = 2
trim_trailing_whitespace = true

[*.{xml,xsl}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.{BAT,ASM,INC,MAC,bat,asm,inc,mac}]
indent_style = tab
indent_size = 8
end_of_line = crlf
trim_trailing_whitespace = true

[makefile]
indent_style = tab
indent_size = 8
end_of_line = crlf
trim_trailing_whitespace = true

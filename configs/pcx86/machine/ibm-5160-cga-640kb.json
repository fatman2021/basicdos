    "ram": "640K",
    "fpu": "None",
    "fdc": "2 diskette drives",
    "parallel": "LPT1",
    "serial": "COM1,COM2",
    "mouse": "COM2"
  },
  "machine": {
    "type": "pcx86",
    "name": "PCx86",
    "version": "2.03",
